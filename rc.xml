<?xml version="1.0" encoding="UTF-8"?>

<!-- Do not edit this file, it will be overwritten on install.
        Copy the file to $HOME/.config/openbox/ instead. -->

<openbox_config xmlns="http://openbox.org/3.4/rc"
                xmlns:xi="http://www.w3.org/2001/XInclude">

<placement>
  <policy>Smart</policy>
  <center>no</center>
  <monitor>Any</monitor>
  <primaryMonitor>1</primaryMonitor>
</placement>

<desktops>
  <number>2</number>
  <firstdesk>1</firstdesk>
  <names>
    <name>desktop1</name>
    <name>desktop2</name>
  </names>
  <popupTime>0</popupTime>
</desktops>

<keyboard>
    <keybind key="W-1">
      <action name="GoToDesktop">
        <to>1</to>
      </action>
    </keybind>
    <keybind key="W-2">
      <action name="GoToDesktop">
        <to>2</to>
      </action>
    </keybind>
</keyboard>

<applications>

  <application class="Chromium*">
    <desktop>2</desktop>
    <focus>no</focus>
    <fullscreen>yes</fullscreen>
    <layer>below</layer>
  </application>
  
  <application class="feh">
    <focus>no</focus>
    <skip_taskbar>no</skip_taskbar>
    <layer>above</layer>
    <decor>no</decor>
  </application>

  <application class="omxplayer">
    <focus>no</focus>
    <skip_taskbar>no</skip_taskbar>
    <layer>above</layer>
    <decor>no</decor>
  </application>
</applications>

</openbox_config>